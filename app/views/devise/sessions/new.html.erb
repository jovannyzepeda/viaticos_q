<div class="col-md-6 col-md-offset-3">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <h2 class="proyect_name alert alert-info">
    <strong>Inicio de Sesión</strong>
  </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email , "Correo Electrónico" %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "usuario@qualtop.com" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "on", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me , "Recuérdame"%>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Iniciar sesión" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
