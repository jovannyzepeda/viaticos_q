<%= form_for([@zone,@proyect,@spend]) do |f| %>
  <% if @spend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@spend.errors.count, "error") %> prohibited this spend from being saved:</h2>

      <ul>
      <% @spend.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group date">
    <%= f.label :fecha %><br>
    <%= f.date_field :fecha ,required: "required"%>
  </div>
  <br>
  <div class="form-group dates">
    <%= f.label :tipo, "Tipo de gasto" %><br>
    <%= f.select(:tipo) do %>
      <%= content_tag(:option, "Alimentos", value: "Alimentos") %>
      <%= content_tag(:option, "Avión", value: "Avión") %>
      <%= content_tag(:option, "Adicionales Gasolina", value: "Adicionales Gasolina") %>
      <%= content_tag(:option, "Estacionamiento", value: "Estacionamiento") %>
      <%= content_tag(:option, "Hotel", value: "Hotel") %>
      <%= content_tag(:option, "Insumos de Oficina", value: "Insumos de Oficina") %>
      <%= content_tag(:option, "Taxi Local", value: "Taxi Local") %>
      <%= content_tag(:option, "Taxi (al/desde Aeropuerto)", value: "Taxi (al/desde Aeropuerto)") %>
      <%= content_tag(:option, "Transporte Terrestre", value: "Transporte Terrestre") %>
    <%end%>
  </div>
  <div class="form-group">
    <%= f.label :importe %><br>
    <%= f.text_field :importe , required: "required", class: "form-control", placeholder: "Dato numerico Ej. 123.98"%>
  </div>
  <% if @report == 1%>
    <%= f.label :status , "Reportado" %><br>
    <%= f.check_box :status%>
  <%end%>
  <div class="form-group">
    <%= f.label :comntarios , "Comentarios"%><br>
    <%= f.text_area :comntarios , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :comprobante , "Se cuenta con comprobante" %><br>
    <%= f.check_box :comprobante %>
  </div>
  <div class="form-group">
    <%= f.label :numero_comprobante , "Numero de folio del comprobante" %><br>
    <%= f.text_field :numero_comprobante , class: "form-control"%>
  </div>
  <div class="form-group">
    Imagen de comprobante <%= f.file_field :ticket %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar" , class: 'btn btn-primary btn-sm guardar'  %>
  </div>
<% end %>
