<div class="col-md-6 col-md-offset-3">
  <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <h2 class="proyect_name alert alert-info">
    <strong>Generacion de Reporte Viaticos</strong> 
  </h2>
  <form method="get" action="" id= "index">
    <div class="form-group dates">
      <label for = 'inicio'>Fecha Inicio:</label>
      <%= date_field(:xls,:inicio) %>
    </div>
    <div class="form-group dates">
      <label for= "fin">Fecha Fin:</label>
      <%= date_field(:xls,:fin) %>
    </div>
    <div class="actions">
       <%= link_to 'Generar Reporte',  zone_proyect_spends_path(@zone,@proyect,request.parameters.merge({:format => :html})), :onclick => "$('#index').submit()" ,class: "btn btn-danger fa fa-file-excel-o edit "%>
    </div>
  </form>
  <%= link_to ' Regresar', [@zone,@proyect], class: "btn btn-info float_right " %>
</div>
<%unless  @spends.blank?%>
  <div class="col-md-12">
    <h2 class="proyect_name alert alert-info">
      <strong>Vista de Resultado</strong> 
    </h2>
    <%= link_to ' Descargar',  zone_proyect_spends_path(@zone,@proyect,request.parameters.merge({:format => :xlsx})), :onclick => "$('#index').submit()",class: "btn btn-success  margin-top fa fa-download edit "%>
    <div class="col-md-12">
      <%= render "table"%>
    </div>
  </div>

<%end%>