<table>
  <tr>
    <th></th>
    <th>Reporte de gastos</th>
    <th></th>
    <th><%= @val[:inicio]%></th>
    <th>-</th>
    <th><%= @val[:fin]%></th>
    <th></th>
  </tr>
<tr></tr>
  <tr>
    <th>Nombre:</th>
    <th><%=current_user.email%></th>
    <th></th>
    <th></th>
    <th>Deposito Adelantado</th>
    <th>$ <%= @total %></th>
  </tr>
<tr></tr>
  <thead>
    <tr>
      <th >Comprobante</th>
      <th>Numero comprobante</th>
      <th>Proyecto</th>
      <th>Fecha</th>
      <th>Tipo de Gasto</th>
      <th>Importe</th>
      <th>Comentarios</th>
      <th>Ticket</th>
    </tr>
  </thead>

  <tbody>
  <%unless @spends.blank?%>
 
    <% @spends.each do |spend| %>
      <tr>
        <% if spend.comprobante == 1%>
          <td>SI</td>
        <%else%>
          <td>NO</td>
        <%end%>
        <td><%= spend.numero_comprobante %></td>
        <td><%= spend.proyect.name %></td>
        <td><%= spend.fecha %></td>
        <td><%= spend.tipo %></td>
        <td><%= spend.importe %></td>
        <td><%= spend.comntarios %></td>
        <%if spend.ticket_file_name != nil%>
        <td><%= image_tag spend.ticket.url(:thumb)%></td>
        <%end%>
  
      </tr>
    <% end %>
    <%end%>

  </tbody>
</table>