<div class="col-md-8 col-md-pushed-2 col-md-offset-2">
  <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <h2 class="proyect_name alert alert-info">
    <strong>Áreas de proyectos</strong>
  </h2>
  <%= link_to ' Crear Area', new_zone_path ,class: "btn btn-primary fa fa-plus edit "%>
  <div class="table-responsive">
    <table class="table table-bordered">
      <caption class="top-center">
        <strong>Lista de Áreas</strong>
      </caption>
      <thead>
        <tr>
          <th>Nombre de Área</th>
        </tr>
      </thead>

      <tbody>
        <%@valor = 0%>
        <% @zones.each do |zone| %>
          <%= render "parcial/color"%>
            <td><%= link_to zone.name, [zone,@proyect] %></td>
            <%if current_user.is_admin? %>
              <td><%= link_to 'Editar', edit_zone_path(zone) %></td>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
